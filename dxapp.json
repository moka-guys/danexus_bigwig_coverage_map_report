{
    "name": "dnanexus_bigwig_coverage_map_report_v1.0",
    "title": "dnanexus_bigwig_coverage_map_report_v1.0",
    "summary": "Create bigwig coverage maps from the stiched/realigned BAMs for TSO runs.",
    "dxapi": "1.0.0",
    "inputSpec": [
        {
            "name": "input_bam",
            "label": "Name of input BAM file to create BigWig coverage file from",
            "help": "Name of input BAM file to create BigWig coverage file from",
            "class": "file",
            "optional": false
        },
        {
            "name": "output_directory",
            "label": "Folder to save output files to",
            "help": "Folder to save output files to",
            "class": "string",
            "optional": true,
            "default": "coverage/raw_output/"
        }
    ],
    "outputSpec": [
        {
            "name": "bigwig_file",
            "label": "BigWig output file",
            "help": "BigWig output file",
            "class": "file",
            "patterns": [
                "*.bw"
            ]
        }
    ],
    "runSpec": {
        "file": "src/code.sh",
        "release": "20.04",
        "version": "0",
        "interpreter": "bash",
        "timeoutPolicy": {
            "*": {
                "minutes": 60
            }
        },
        "distribution": "Ubuntu"
    },
    "access": {
        "project": "CONTRIBUTE",
        "allProjects": "VIEW",
        "network": [
            "*"
        ]
    },
    "ignoreReuse": false,
    "regionalOptions": {
        "aws:us-east-1": {
            "systemRequirements": {
                "*": {
                    "instanceType": "mem1_ssd1_x4"
                }
            }
        }
    }
}